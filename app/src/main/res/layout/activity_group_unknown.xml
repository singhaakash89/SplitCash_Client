<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context="com.app.splitCash.group.Group">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <ListView
        android:layout_marginTop="56dp"
        android:layout_marginBottom="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupUnKnownMemberListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total :"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/totalUnKnownTextView"
        android:layout_marginLeft="246dp"
        android:layout_marginTop="400dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Nill"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#00897B"/>

    <TextView
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/emptyUnKnownMemberListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Add Members"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#26A69A"/>

    <Button
        android:id="@+id/moneyTimeUnKnownButton"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:background="@color/buttonColor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:capitalize="none"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#fff"
        android:text="@string/button_for_splitCash"
        android:onClick="moneyTime"
        android:visibility="invisible"/>


</RelativeLayout>